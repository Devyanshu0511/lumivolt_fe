<svg width="600" height="400" viewBox="0 0 600 400" xmlns="http://www.w3.org/2000/svg">
  <!-- Background with subtle gradient -->
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f0f9ff;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#e0f2fe;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="panelGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1e3a8a;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#2563eb;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1d4ed8;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="frameGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#374151;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#4b5563;stop-opacity:1" />
    </linearGradient>
  </defs>

  <!-- Background -->
  <rect width="600" height="400" fill="url(#bgGradient)"/>

  <!-- Solar Panel Frame -->
  <rect x="80" y="60" width="440" height="280" rx="12" fill="url(#frameGradient)" stroke="#1f2937" stroke-width="3"/>

  <!-- Solar Cells Grid -->
  <rect x="100" y="80" width="400" height="240" rx="8" fill="url(#panelGradient)"/>

  <!-- Individual Cells (6x12 grid) -->
  <g stroke="#ffffff" stroke-width="1" opacity="0.3">
    <!-- Horizontal lines -->
    <line x1="100" y1="120" x2="500" y2="120"/>
    <line x1="100" y1="160" x2="500" y2="160"/>
    <line x1="100" y1="200" x2="500" y2="200"/>
    <line x1="100" y1="240" x2="500" y2="240"/>
    <line x1="100" y1="280" x2="500" y2="280"/>

    <!-- Vertical lines -->
    <line x1="133" y1="80" x2="133" y2="320"/>
    <line x1="167" y1="80" x2="167" y2="320"/>
    <line x1="200" y1="80" x2="200" y2="320"/>
    <line x1="233" y1="80" x2="233" y2="320"/>
    <line x1="267" y1="80" x2="267" y2="320"/>
    <line x1="300" y1="80" x2="300" y2="320"/>
    <line x1="333" y1="80" x2="333" y2="320"/>
    <line x1="367" y1="80" x2="367" y2="320"/>
    <line x1="400" y1="80" x2="400" y2="320"/>
    <line x1="433" y1="80" x2="433" y2="320"/>
    <line x1="467" y1="80" x2="467" y2="320"/>
  </g>

  <!-- Junction Box -->
  <rect x="270" y="290" width="60" height="25" rx="3" fill="#1f2937"/>
  <circle cx="285" cy="302.5" r="2" fill="#dc2626"/>
  <circle cx="300" cy="302.5" r="2" fill="#dc2626"/>
  <circle cx="315" cy="302.5" r="2" fill="#dc2626"/>

  <!-- Product Label -->
  <rect x="120" y="340" width="360" height="40" rx="6" fill="rgba(255,255,255,0.9)" stroke="#d1d5db" stroke-width="1"/>
  <text x="300" y="362" text-anchor="middle" font-family="Arial, sans-serif" font-size="14" font-weight="bold" fill="#1f2937">Lumivolt Monofacial PERC Series</text>
</svg>

